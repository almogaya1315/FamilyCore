@model FCore.Common.Models.Members.FamilyMemberModel

<div id="_editabout">
    @using (Ajax.BeginForm("EditAbout", "Config", Model, new AjaxOptions
    {
        HttpMethod = "Post",
        UpdateTargetId = "userabout_div",
        InsertionMode = InsertionMode.Replace
    }))
    {
        @Html.TextAreaFor(m => Model.About, new { @style = "resize:none; width:100%; margin-bottom:5%" })
        <div>@Html.ValidationMessageFor(m => Model.About)</div>

        <div class="price-table-button-holder" style="display:inline">
            <input id="editabout_input" class="btn btn-info" style="width:30%; background-color:#43b98a; border-color:#43b98a" type="submit" value="Save" />
        </div>
    }
</div>





