        </div>
        <div class="col-sm-5 col-xs-6 tital ">
            @Html.LabelFor(m => Model.Country)
        </div>
        <div class="clearfix"></div>
        <div class="bot-border"></div>

        <div class="col-sm-7 col-xs-6 ">
            @Html.EditorFor(m => Model.City)
            @Html.ValidationMessageFor(m => Model.City)
        </div>
        <div class="col-sm-5 col-xs-6 tital ">
            @Html.LabelFor(m => Model.City)
        </div>
        <div class="clearfix"></div>
        <div class="bot-border"></div>

        <div class="col-sm-7">
            @Html.EditorFor(m => Model.Street)
            @Html.ValidationMessageFor(m => Model.Street)
        </div>
        <div class="col-sm-5 col-xs-6 tital ">
            @Html.LabelFor(m => Model.Street)
        </div>
        <div class="clearfix"></div>
        <div class="bot-border"></div>

        <div class="col-sm-7">
            @Html.EditorFor(m => Model.HouseNo)
            @Html.ValidationMessageFor(m => Model.HouseNo)
