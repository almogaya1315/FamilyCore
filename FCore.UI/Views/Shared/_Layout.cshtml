<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Family Core</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body dir="ltr">

    <nav id="header" class="navbar navbar-fixed-top" style="background-color:#2f74f1">
        <div id="header-container" class="container navbar-container">
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav" style="margin-left:30%">
                    <li>@Html.ActionLink("עריכה", "Edit", "Admin", null, new { @style = "color: wheat; font-size:20px" })</li>
                    <li class="active">@Html.ActionLink("ראשי", "Main", "FamilyCore", null, new { @style = "color: wheat; font-size:20px" })</li>
                </ul>

                <div class="navbar-header" style="margin-left:10%">
                    @Html.ActionLink("FAMILY CORE", "Main", "FamilyCore", null, new { @class = "navbar-brand", @id = "brand", @style = "color: wheat" })
                </div>

            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Family Core</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>