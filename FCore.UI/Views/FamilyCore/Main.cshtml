@model ICollection<FCore.Common.Models.Families.FamilyModel>

@{
    ViewBag.Title = "Main";
}

<h2>Main</h2>

<div>
    <div>
        <table>
            @{
                foreach (var family in Model)
                {
                    <tr>
                        <td>
                            @Html.Label("Id: ")
                            @family.Id,
                        </td>
                        <td>
                            @Html.LabelFor(Model.FirstOrDefault())
                            @family.Name
                        </td>
                    </tr>

                    <text>-------------------</text>

                    foreach (var member in family.FamilyMembers)
                    {
                        <tr>
                            <td>@member.FirstName</td>
                            <td>@member.LastName</td>
                            <td>@member.Id</td>
                        </tr>
                    }
                }
            }
        </table>
    </div>
</div>
