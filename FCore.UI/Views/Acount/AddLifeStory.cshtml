@model FCore.Common.Models.Members.FamilyMemberModel

<div class="container">
    <div class="row bs-wizard" style="border-bottom:0; margin-left:-9%">

        <div class="col-xs-3 bs-wizard-step disabled">
            <div class="text-center bs-wizard-stepnum">Step 1</div>
            <div class="progress" style="width:30%; background-color:#7da4f5"><div class="progress-bar"></div></div>
            <div class="bs-wizard-dot" style="background-color:#7da4f5"></div>
        </div>

        <div class="col-xs-3 bs-wizard-step disabled" style="margin-left:-10%">
            <div class="text-center bs-wizard-stepnum">Step 2</div>
            <div class="progress" style="width:60%; background-color:#7da4f5"><div class="progress-bar"></div></div>
            <div class="bs-wizard-dot" style="background-color:#7da4f5"></div>
        </div>

        <div class="col-xs-3 bs-wizard-step disabled" style="margin-left:-10%">
            <div class="text-center bs-wizard-stepnum">Step 3</div>
            <div class="progress" style="width:60%; background-color:#7da4f5"><div class="progress-bar"></div></div>
            <div class="bs-wizard-dot" style="background-color:#7da4f5"></div>
        </div>

        <div class="col-xs-3 bs-wizard-step active" style="margin-left:-10%">
            <div class="text-center bs-wizard-stepnum">Step 4</div>
            <div class="progress" style="width:50%; background-color:#7da4f5"><div class="progress-bar"></div></div>
            <div class="bs-wizard-dot" style="background-color:#7da4f5"></div>
        </div>

    </div>
</div>

<br />

@using (Ajax.BeginForm("AddLifeStory", "Acount", Model, new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "register_wizard",
    HttpMethod = "Post"
}))
{
    <div class="clearfix" style="margin-top:5%"></div>
    <div style="margin-left:2%; font-weight:bold; font-size:x-large; color:#6fadbe">Life story</div>
    <div class="bot-border"></div>

    <div style="margin-top:2%">
        <div class="col-sm-12">
            @Html.TextAreaFor(m => Model.About, new { @class = "about-text-area", @placeholder = " Write your story here" })
            @Html.ValidationMessageFor(m => Model.About) @* yet to be set in proper position in html view *@
        </div>
        <div class="clearfix"></div>
        <div class="bot-border"></div>
    </div>

    <br />

    <div>
        <input id="back_from_ls" type="button" class="btn btn-info" value="<<  Back" style="display:inline; margin-left:2%; width:17%"/>

        <input class="btn btn-info" type="submit" value="Finish  >>" style="margin-left:59%; display:inline" />
    </div>
}

<script>
    $(function () {
        $('#back_from_ls').on('click', function () {
            var url = '@Url.Action("LoadContactInfo", "Acount", Model.ContactInfo)'
            $('#register_wizard').load(url)
        })
    })
</script>
